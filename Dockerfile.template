FROM resin/%%RESIN_MACHINE_NAME%%-debian

ENV INITSYSTEM on

RUN apt-get update \
    && apt-get install -y dnsmasq wireless-tools \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /usr/src/app/

WORKDIR /usr/src/app

#pack it up
COPY ui ui/
COPY data data/
COPY start start
COPY target/x86_64-unknown-linux-gnu/release/wifi-connect .

CMD ["bash", "start"]
